<div class="container">
        {{> post-partial post }}
</div>
<div class="container">
    <div class="col-md-6">
        {{> comment-partial post.comments}}

        {{#if logged_in}}
        <form class="form-inline comment-form" role="form">
            <div class="form-group">
                <textarea id="your-comment" type="text" name="comment-body" rows="3" cols="70" placeholder="Your comment"></textarea>
            </div>
            <div class="button-container">
                <button class="commentBtn btn-default" type="submit">Comment</button>
            </div>
        </form>
        {{/if}}
    </div>
</div>

<script src="/js/comment.js"></script>